<article>
    <a href="/dashboard">&#9666; Back to the Dash</a>
    <h2>Edit My Information</h2>
    <form class="edit-user-form">
        <div>
            <label for="user-name">User Name</label>
            <input type="text" name="user-name" value="{{user.username}}" />
        </div>
        <div>
            <label for="email">User Email</label>
            <input name="email" value="{{user.email}}" />
        </div>
        <div>
            <label for="password">Password</label>
            <input type="password" name="password" />
        </div>
        <div>
            <input type="hidden" id="user-id" name="user-id" value="{{user.id}}" />
        </div>
        <button type="submit">Update</button>
    </form>
</article>

<script src="/js/edit-user.js"></script>